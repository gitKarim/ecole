
{% extends 'base.admin.html.twig' %}
{% block title %}administration d'etablissement{% endblock %}

{% block body %}

<div class="content-wrapper">
        <div class="container-fluid">
          <!-- Breadcrumbs-->
          <ol class="breadcrumb">
            <li class="breadcrumb-item">
              <a href="{{path('administrateur')}}">Tableau de bord</a>
            </li>
            <li class="breadcrumb-item active">Accueil</li>
          </ol>
          <!-- Icon Cards-->
          <div class="row">
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card dashboard text-white bg-primary o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                        <i class="fas fa-users"></i>
                  </div>
                  <div class="mr-5"><h5>{{totalEleves}}<br> Elèves</h5></div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{path('page_eleve')}}">
                  <span class="float-left">Voir Détails</span>
                  <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                  </span>
                </a>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card dashboard text-white bg-warning o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                        <i class="fas fa-chalkboard-teacher"></i>
                  </div>
                    <div class="mr-5"><h5>{{totalEnseignant}}<br> Enseignants</h5></div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{path('page_enseignant')}}">
                  <span class="float-left">Voir Détails</span>
                  <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                  </span>
                </a>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card dashboard text-white bg-success o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                        <i class="fas fa-chalkboard"></i>
                  </div>
                  <div class="mr-5"><h5>{{totalNiveau}} <br>Classes</h5></div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="{{path('page_niveau')}}">
                  <span class="float-left">Voir Détails</span>
                  <span class="float-right">
                    <i class="fa fa-angle-right"></i>
                  </span>
                </a>
              </div>
            </div>
            <div class="col-xl-3 col-sm-6 mb-3">
              <div class="card dashboard text-white bg-danger o-hidden h-100">
                <div class="card-body">
                  <div class="card-body-icon">
                    <i class="fas fa-clock"></i>
                  </div>
                  <div class="mr-5"><h5>{{ "now"|date("d/m/Y") }}</h5></div>
                </div>
                
              </div>
            </div>
            </div>
            <!-- /cards -->
            <h2></h2>
             
          </div>
          <!-- /.container-fluid-->
           </div>
           
                  
{% endblock %}
