                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Matière</th>
                      <th>Action</th>

    
                    </tr>
                  </tfoot>
                  <tbody>
                        {% if matieres is defined %}
                
                        {% for matiere in matieres %}
                    <tr>
                      <td>{{matiere.libelle}}</td>
                      <td>
                         <div>
                        <span>   <a  href="/administrateur/matiere/edit/{{ matiere.id }}"  data-id="{{ matiere.id }}"><i class="fas fa-edit" aria-hidden="true"></i></a>  </span>-<a  href="/administrateur/matiere/delete/{{ matiere.id }}"  data-id="{{ matiere.id }}"><i class="fa fa-trash" aria-hidden="true"></i>
                        </a>  </td>
                        </div> 
                    </tr>
                    {% endfor %}
                
                 {% else %}
                  aucune matière n'est défini.
                  {% endif %}
    
                  </tbody>
                </table>
              </div>
            </div>
            <div class="card-footer small text-muted">ici date de mise à jour</div>
          </div>
    <!-- tableau des matières-->
